<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet author="R3.Corda" id="transaction-state-v1.0">
        <createTable tableName="block_signatures">
            <column name="block_number" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="signatures" type="VARBINARY(8388608)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey columnNames="block_number, signatures" constraintName="block_sig_pk" tableName="block_signatures"/>

        <createTable tableName="evm_signatures">
            <column name="transaction_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="signature" type="VARBINARY(8388608)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey columnNames="transaction_id, signatures" constraintName="evm_sig_pk" tableName="evm_signatures"/>

        <createTable tableName="draft_transaction">
            <column name="transaction_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="transaction" type="VARBINARY(8388608)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey columnNames="transaction_id, transaction" constraintName="draft_tx_pk" tableName="draft_transaction"/>
    </changeSet>
</databaseChangeLog>