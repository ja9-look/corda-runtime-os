<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet author="R3.Corda" id="drafttx-state-v1.0">
        <createTable tableName="drafttx">
            <column name="id" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="tx" type="VARBINARY(8388608)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="block_signatures">
            <column name="block_number" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="signature" type="VARBINARY(8388608)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="evm_signatures">
            <column name="transaction_id" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="signature" type="VARBINARY(8388608)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
